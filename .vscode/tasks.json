{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "OpenInDelphi: Lint",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"lint"
			],
			"group": "test",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "OpenInDelphi: Pretest",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"pretest"
			],
			"group": "test",
			"problemMatcher": [
				"$eslint-stylish"
			]
		},
		{
			"label": "OpenInDelphi: Test",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"test"
			],
			"group": "test"
		},
		{
			"label": "OpenInDelphi: Package patch & local install",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"package"
			],
			"group": "build"
		},
		{
			"label": "OpenInDelphi: Package Minor",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"package-minor"
			],
			"group": "build"
		},
		{
			"label": "OpenInDelphi: Package Major",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"package-major"
			],
			"group": "build"
		},
		{
			"label": "OpenInDelphi: Package no new version & Debug in new Code instance",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"release-no-new-version"
			],
			"group": "build"
		},
		{
			"label": "OpenInDelphi: Publish to GitHub & Marketplace",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"publish-current-version"
			],
			"group": "build"
		}
	]
}