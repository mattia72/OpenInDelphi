{
  "name": "openindelphi",
  "displayName": "Open in Delphi",
  "description": "Opens current file in Delphi IDE",
  "version": "1.0.0",
  "publisher": "mattia72",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattia72/openindelphi.git"
  },
  "keywords": [
    "delphi",
    "pascal",
    "ide",
    "integration"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openindelphi.openCurrentFileInDelphi",
        "title": "Open Current File in Delphi"
      }
    ],
    "keybindings": [
      {
        "command": "openindelphi.openCurrentFileInDelphi",
        "key": "ctrl+alt+d",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package-patch": "vsce package patch",
    "package-minor": "vsce package minor",
    "package-major": "vsce package major"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
