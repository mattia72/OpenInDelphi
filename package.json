{
  "name": "openindelphi",
  "displayName": "Open in Delphi",
  "description": "Opens current file in Delphi IDE",
  "version": "1.2.0",
  "publisher": "Mattia72-OpenInDelphi",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/mattia72/openindelphi.git"
  },
  "keywords": [
    "delphi",
    "pascal",
    "ide",
    "integration"
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openindelphi.openCurrentFileInDelphi",
        "title": "Open in Delphi: Open Current File in Delphi"
      },
      {
        "command": "openindelphi.buildActiveProjectInDelphi",
        "title": "Open in Delphi: Build Active Project in Delphi"
      },
      {
        "command": "openindelphi.compileActiveProjectInDelphi",
        "title": "Open in Delphi: Compile Active Project in Delphi"
      }
    ],
    "configuration": {
      "title": "Open in Delphi",
      "properties": {
        "openindelphi.showContextMenu": {
          "type": "boolean",
          "default": true,
          "description": "Show context menu item 'Open Current File in Delphi'"
        },
        "openindelphi.showContextMenuOnFileExtension": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "*"
          ],
          "description": "Show context menu only for files with these extensions. Use '*' for all file extensions, empty string '' for files without extension. Example: ['pas', 'dpr', 'dpk', ''] for Delphi files and files without extension"
        }
      }
    },
    "keybindings": [
      {
        "command": "openindelphi.openCurrentFileInDelphi",
        "key": "shift+alt+d",
        "when": "editorTextFocus"
      },
      {
        "command": "openindelphi.buildActiveProjectInDelphi",
        "key": "shift+alt+b",
        "when": "editorTextFocus"
      },
      {
        "command": "openindelphi.compileActiveProjectInDelphi",
        "key": "shift+alt+c",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "openindelphi.openCurrentFileInDelphi",
          "group": "navigation@1",
          "when": "openindelphi.shouldShowContextMenu"
        },
        {
          "command": "openindelphi.buildActiveProjectInDelphi",
          "group": "navigation@2",
          "when": "openindelphi.shouldShowContextMenu"
        },
        {
          "command": "openindelphi.compileActiveProjectInDelphi",
          "group": "navigation@3",
          "when": "openindelphi.shouldShowContextMenu"
        }
      ],
      "explorer/context": [
        {
          "command": "openindelphi.openCurrentFileInDelphi",
          "group": "navigation@1",
          "when": "openindelphi.shouldShowContextMenu"
        },
        {
          "command": "openindelphi.buildActiveProjectInDelphi",
          "group": "navigation@2",
          "when": "openindelphi.shouldShowContextMenu"
        },
        {
          "command": "openindelphi.compileActiveProjectInDelphi",
          "group": "navigation@3",
          "when": "openindelphi.shouldShowContextMenu"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint *.js",
    "pretest": "npm run lint",
    "test": "vscode-test",
    "package": "vsce package patch && pwsh -c \"code --install-extension (Get-ChildItem openindelphi-*.vsix | Sort-Object LastWriteTime -Descending | Select-Object -First 1).Name\"",
    "package-minor": "vsce package minor && pwsh -c \"code --install-extension (Get-ChildItem openindelphi-*.vsix | Sort-Object LastWriteTime -Descending | Select-Object -First 1).Name\"",
    "package-major": "vsce package major && pwsh -c \"code --install-extension (Get-ChildItem openindelphi-*.vsix | Sort-Object LastWriteTime -Descending | Select-Object -First 1).Name\"",
    "release-no-new-version": "pwsh -File ./scripts/release.ps1 -versionType patch -SkipVersionBump && pwsh -c \"code --install-extension (Get-ChildItem openindelphi-*.vsix | Sort-Object LastWriteTime -Descending | Select-Object -First 1).Name\"",
    "publish-current-version": "pwsh -File ./scripts/release.ps1 -versionType patch -SkipVersionBump && vsce publish",
    "release": "pwsh -File ./scripts/release.ps1 -versionType patch",
    "release-minor": "pwsh -File ./scripts/release.ps1 -versionType minor",
    "release-major": "pwsh -File ./scripts/release.ps1 -versionType major"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.25.1",
    "@vscode/vsce": "^3.6.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
